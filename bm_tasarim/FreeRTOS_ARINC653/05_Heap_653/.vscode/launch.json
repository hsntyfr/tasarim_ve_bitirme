{
    "version": "0.2.0",
    "configurations": [
 
       {
            "name": "Cortex Debug",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "stlink",
            "cwd": "${workspaceFolder}",
            "executable": "./build/Debug/05_Heap_653.elf",
            "runToEntryPoint": "main",
            "preLaunchTask": "Build STM32",


        },
        {
            "name": "STM32 Debug (OpenOCD + FreeRTOS)",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "cwd": "${workspaceFolder}",
            "executable": "./build/Debug/05_Heap_653.elf",
            "runToMain": false,
            "device": "STM32F303RE",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f3x.cfg"
            ],
            "svdFile": "${workspaceFolder}/STM32F303.svd",
            "rtos": "FreeRTOS",
            "postRestartCommands": ["monitor reset init"]
        }

    ]
}
